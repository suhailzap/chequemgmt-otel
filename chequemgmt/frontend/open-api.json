{
    "openapi": "3.0.1",
    "info": {
      "title": "Cheque Management API",
      "version": "v1"
    },
    "servers": [
      {
        "url": "http://localhost:8085",
        "description": "Local server"
      }
    ],
    "paths": {
      "/cheques/list": {
        "get": {
          "tags": ["cheque-controller"],
          "summary": "Get all cheque records",
          "operationId": "getChequeNo",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/AqiRecord"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/cheques/add": {
        "post": {
          "tags": ["cheque-controller"],
          "summary": "Add cheque record",
          "operationId": "addChequeDetails",
          "parameters": [
            {
              "name": "chequeNo",
              "in": "formData",
              "required": true,
              "schema": { "type": "string" }
            },
            {
              "name": "approvalGranted",
              "in": "formData",
              "required": true,
              "schema": { "type": "boolean" }
            }
          ],
          "responses": {
            "200": {
              "description": "Cheque details added successfully",
              "content": {
                "application/json": {
                  "schema": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "/cheques/remove": {
        "delete": {
          "tags": ["cheque-controller"],
          "summary": "Delete cheque record for chequeNo",
          "operationId": "clearChequeFromQueue",
          "parameters": [
            {
              "name": "chequeNo",
              "in": "query",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
            "description": "Cheque record deleted",
            "content": {
              "application/json": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
  },
    "components": {
      "schemas": {
        "ChequeRecord": {
          "type": "object",
          "properties": {
            "chequeNo": { "type": "string" },
            "approvalGranted": { "type": "boolean" }
          }
        }
      }
    }
  }
}